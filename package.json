{
  "name": "analogical",
  "version": "0.0.1",
  "description": "Personal website",
  "author": "Ricardo Casares",
  "license": "MIT",
  "homepage": "https://github.com/ricardocasares/analogical#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ricardocasares/analogical.git"
  },
  "scripts": {
    "dev": "node server",
    "test": "jest",
    "start": "node server",
    "build": "next build",
    "size": "npx bundlesize",
    "release": "npx semantic-release",
    "deploy": "npx now --token $NOW_TOKEN",
    "alias": "npx now alias --token $NOW_TOKEN",
    "deploy:prod": "npx npm-run-all -s deploy alias",
    "deploy:dev": "npx npm-run-all -s deploy alias:dev",
    "alias:dev": "npx now alias dev.analogic.al --token $NOW_TOKEN"
  },
  "dependencies": {
    "@emotion/core": "^10.0.5",
    "@emotion/styled": "^10.0.5",
    "@zeit/next-typescript": "^1.1.1",
    "emotion-theming": "^10.0.6",
    "isomorphic-unfetch": "^3.0.0",
    "memoize-promise": "^0.2.2",
    "next": "^7.0.2",
    "next-ga": "^2.3.4",
    "nprogress": "^0.2.0",
    "polka": "^0.5.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-markdown": "^4.0.6",
    "slugo": "^0.2.3",
    "styled-system": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/next": "^7.0.7",
    "@types/nprogress": "0.0.29",
    "@types/react": "^16.7.22",
    "@types/react-test-renderer": "^16.0.3",
    "@types/styled-system": "^3.1.2",
    "babel-plugin-emotion": "^10.0.6",
    "babel-plugin-inline-dotenv": "^1.2.1",
    "babel-plugin-module-resolver": "^3.1.3",
    "jest": "^24.0.0",
    "jest-emotion": "^10.0.5",
    "react-test-renderer": "^16.7.0",
    "typescript": "^3.2.4"
  },
  "release": {
    "plugins": [
      "@semantic-release/github",
      "@semantic-release/release-notes-generator"
    ]
  },
  "bundlesize": [
    {
      "path": "./.next/**/commons*.js",
      "maxSize": "80 kB"
    },
    {
      "path": "./.next/**/runtime/main-*.js",
      "maxSize": "7 kB"
    },
    {
      "path": "./.next/static/chunks/[123456789].*.js",
      "maxSize": "25 kB"
    },
    {
      "path": "./.next/static/*[123456789]*/pages/*.js",
      "maxSize": "25 kB"
    }
  ],
  "keywords": [
    "blog",
    "next",
    "zeit",
    "docker",
    "analogical",
    "analogic.al"
  ]
}
