{
  "name": "analogical",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon server -w server.js -w routes.js",
    "dev:tdd": "run-p dev test:tdd",
    "test": "jest",
    "test:tdd": "jest --watch",
    "test:cover": "jest --coverage",
    "build": "next build",
    "start": "node server"
  },
  "keywords": [],
  "author": "Ricardo Casares <ricardocasares@gmail.com> (http://analogic.al/)",
  "license": "MIT",
  "dependencies": {
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-transform-inline-environment-variables": "^0.2.0",
    "fast-memoize": "^2.2.8",
    "isomorphic-unfetch": "^2.0.0",
    "next": "^4.1.4",
    "next-routes": "^1.1.0",
    "nprogress": "^0.2.0",
    "open-color": "^1.5.1",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-bytesize-icons": "^0.8.0",
    "react-dom": "^16.2.0",
    "react-markdown": "^3.0.2",
    "s-ago": "^1.1.0"
  },
  "devDependencies": {
    "babel-plugin-inline-dotenv": "^1.1.1",
    "babel-preset-env": "^1.6.1",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.2",
    "react-test-renderer": "^16.2.0"
  },
  "babel": {
    "plugins": [
      [
        "module-resolver",
        {
          "root": ["./"],
          "alias": {
            "api": "./api",
            "lib": "./lib",
            "providers": "./providers",
            "components": "./components"
          }
        }
      ]
    ],
    "env": {
      "development": {
        "presets": ["next/babel"],
        "plugins": ["inline-dotenv"]
      },
      "production": {
        "presets": ["next/babel"],
        "plugins": ["transform-inline-environment-variables"]
      },
      "test": {
        "plugins": ["inline-dotenv"],
        "presets": [
          [
            "env",
            {
              "modules": "commonjs"
            }
          ],
          "next/babel"
        ]
      }
    }
  },
  "jest": {
    "testMatch": ["**/?(*.)(spec|test).js?(x)"],
    "coverageDirectory": ".coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "now": {
    "name": "analogical",
    "alias": ["analogic.al", "www.analogic.al"],
    "dotenv": ".env.production"
  }
}
